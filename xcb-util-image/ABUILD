pkgname=xcb-util-image
pkgver=0.3.9
pkgbuild=2
arch=('auto')

shortdesc=("Utility libraries for XC Binding - Port of Xlib's XImage and XShmImage functions")

tags=('x11-xcbs xserver')

source=("http://xcb.freedesktop.org/dist/${pkgname}-${pkgver}.tar.bz2")
build_deps="util-macros libxcb xcb-util"


BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --disable-static"
INSTALL_KEYS="DESTDIR=$pkgdir"


