pkgname=wireless-tools
pkgver=29
pkgbuild=7
arch=("auto")

shortdesc=("Utilities for wireless networking")
tags=("network net-wireless")
source=("http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/${pkgname/-/_}.${pkgver}.tar.gz")
build_deps="gcc"

build() {
  go_src_dir
  burn_patches
  make CFLAGS="${CFLAGS} -I." LDFLAGS="${LDFLAGS}"
  make \
    INSTALL_DIR="${pkgdir}/sbin" \
    INSTALL_LIB="${pkgdir}/usr/lib${LIBDIRSUFFIX}" \
    INSTALL_INC="${pkgdir}/usr/include" \
    INSTALL_MAN="${pkgdir}/usr/man" \
    install

  mkdir -p ${pkgdir}/etc/rc.d
  cp $filedir/rc.wireless* ${pkgdir}/etc/rc.d
}

