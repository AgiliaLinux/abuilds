pkgname=dvd+rw-tools
pkgver=7.1
pkgbuild=2
arch=("auto")

shortdesc=("dvd+rw-tools (DVD+-RW tools)")
longdesc=("A collection of tools to master DVD+RW/+R/-R/-RW media. For further information see http://fy.chalmers.se/~appro/linux/DVD+RW/. The DVD+RW tools were written by Andy Polyakov.")

tags=("console app-cdr")

source=("http://fy.chalmers.se/~appro/linux/DVD+RW/tools/${pkgname}-${pkgver}.tar.gz")

build_deps="gcc glibc-solibs"

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib$LIBDIRSUFFIX --mandir=/usr/man --sysconfdir=/etc"
INSTALL_KEYS="DESTDIR=$pkgdir"

after_build() {
  go_src_dir
  install -m755 -d "${pkgdir}/usr/bin"
  install -m755 -d "${pkgdir}/usr/man/man1"
  install -m755 growisofs dvd+rw-booktype dvd+rw-format dvd+rw-mediainfo dvd-ram-control "${pkgdir}/usr/bin/"
  install -m644 growisofs.1 ${pkgdir}/usr/man/man1/growisofs.1
}
