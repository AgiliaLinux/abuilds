pkgname=libcaca
pkgver=0.99.beta18
pkgbuild=1
arch=("auto")

shortdesc=("Colour AsCii Art library")
longdesc=("The libcaca library is a graphics library that outputs text instead of pixels, so that it can work on older video cards or text terminals. It is not unlike the famous AAlib library. Sam Hocevar is the main author of libcaca.")

tags=("libs media-gfx")
source=("http://libcaca.zoy.org/files/libcaca/${pkgname}-${pkgver}.tar.gz")
build_deps="imlib2 ncurses"

before_build() {
    sed -i \
	-e 's:$(JAVAC):$(JAVAC) $(JAVACFLAGS):' \
	-e 's:libcaca_java_la_CPPFLAGS =:libcaca_java_la_CPPFLAGS = -I../caca:' \
	java/Makefile.am || die
    #autoreconf
}

