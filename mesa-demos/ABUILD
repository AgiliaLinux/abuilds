BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX}"
INSTALL_KEYS="DESTDIR=$pkgdir"

after_build() {
	# Rename conflicting stuff
	for i in clear bitmap line ; do
		mv ${pkgdir}/usr/bin/$i ${pkgdir}/usr/bin/mesa-$i
	done
}
