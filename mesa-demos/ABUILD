pkgver=8.0.1
pkgbuild=4
arch=("auto")

shortdesc=("Mesa utilities and demo programs: glxgears, glxinfo, and so on.")
longdesc=("Mesa utilities and demo programs: glxgears, glxinfo, and so on.")

tags=("x11-misc xserver")

