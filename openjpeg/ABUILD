after_build() {
    (cd "$pkgdir/usr/include"; ln -s openjpeg-1.5/openjpeg.h openjpeg.h)
    (cd "$pkgdir/usr/lib/pkgconfig/"; ln -s libopenjpeg1.pc libopenjpeg.pc )
}