# Package metadata
pkgname=notify-python
pkgver=0.1.1
pkgbuild=4
arch="auto"

# Package description
shortdesc=("Python bindings to libnotify")
longdesc=("Python bindings to libnotify")

# Source URL
source=("http://www.galago-project.org/files/releases/source/notify-python/notify-python-${pkgver}.tar.bz2")
# Tags
tags="libs dev-python"
build_deps="pygtk libnotify python"

build() {
	go_src_dir
	burn_patches
	./configure --prefix=/usr \
		--bindir=/usr/bin \
		--sbindir=/usr/sbin \
		--libexecdir=/usr/libexec \
		--includedir=/usr/include \
		--mandir=/usr/man \
		--infodir=/usr/info \
		--libdir=/usr/lib${LIBDIRSUFFIX} \
		--sysconfdir=/etc \
		--localstatedir=/var

	touch src/pynotify.override

	make clean
	make -j${numjobs}

	make install DESTDIR=${pkgdir}
}


