	--sysconfdir=/etc \
	--localstatedir=/var \
	--libdir=/usr/lib${LIBDIRSUFFIX} \
	--disable-static \
	--mandir=/usr/man \
	--program-prefix= \
	--program-suffix= \
	--disable-nasm \
	--enable-alsa  \
	--enable-esd \
	--with-x \
	--disable-rpath \
	--disable-static"

