pkgname=xrandr
pkgver=1.4.0
pkgbuild=1
arch=('auto')

shortdesc=('xrandr')
longdesc=('xrandr is part of X11. For more information about the X.Org Foundation (the providers of the X.Org implementation of the X Window System), see their website: http://www.x.org')

tags=('x11-apps xserver')

source=("http://xorg.freedesktop.org/archive/individual/app/xrandr-${pkgver}.tar.bz2")
build_deps="libXrandr libX11"

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr --libdir=/usr/lib${LIBDIRSUFFIX} --sysconfdir=/etc --localstatedir=/var --infodir=/usr/info --mandir=/usr/man --disable-static --with-fontrootdir=/usr/share/fonts --build=$ARCH-slackware-linux "
INSTALL_KEYS="DESTDIR=$pkgdir"

