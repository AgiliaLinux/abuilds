pkgver=0.2.8.4
pkgbuild=5
arch=("auto")

shortdesc=("WMF (Microsoft's native Windows Metafile Format) graphics format library")
longdesc=("libwmf is a library for interpreting metafile images and either displaying them using X or converting them to standard formats such as PNG, JPEG, PS, EPS and SVG.")
tags=("libs media-libs")
source=("http://downloads.sourceforge.net/sourceforge/wvware/${pkgname}-${pkgver}.tar.gz")
build_deps="libXt libjpeg libpng glib2 glibc-solibs gtk+2 libX11 libXau libxcb libXdmcp"

BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr \
  --libdir=/usr/lib$LIBDIRSUFFIX \
  --mandir=/usr/man \
  --sysconfdir=/etc \
  --with-gsfontdir=/usr/share/fonts/Type1 \
  --with-fontdir=/usr/share/fonts/Type1 \
  --with-gsfontmap=/usr/share/ghostscript/9.07/Resource/Init/Fontmap.GS"
