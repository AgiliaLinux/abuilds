pkgname=automake
pkgver=1.12.4
pkgbuild=1
arch=('noarch')

shortdesc="A Makefile generator"

source=("ftp://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz")
tags="develop sys-devel"

build_deps="autoconf"
adddep="bash"
BUILD_SYSTEM="autotools"

BUILD_KEYS="--prefix=/usr \
	--sysconfdir=/etc \
	--mandir=/usr/man"

INSTALL_KEYS="DESTDIR=$pkgdir"

